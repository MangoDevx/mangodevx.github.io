---
const currentYear = new Date().getFullYear();
import Social from './Social.astro';
---

<footer class="bg-white border-t border-gray-200 py-6">
  <div class="container mx-auto px-4">
    <div class="flex flex-col items-center space-y-4">
      <div class="flex space-x-6">
        <Social platform="github" username="keithritter" />
        <Social platform="instagram" username="keithritter" />
        <Social platform="flickr" username="keithritter" />
        <Social platform="discord" username="keithritter" />
      </div>
      <div class="text-sm text-gray-600">&copy; {currentYear} Keith Ritter. All rights reserved.</div>
    </div>
  </div>
</footer>